" =================
" general settings
" =================
set number
set encoding=utf-8
set fileencoding=utf-8
set wildmenu

" =================
" vim-plug plugins
" =================
call plug#begin('~/.vim/plugged')

" tender theme
Plug 'jacoborus/tender'
" Plug 'rakr/vim-one'
" nerd tree
Plug 'scrooloose/nerdtree'
" lightline
Plug 'itchyny/lightline.vim'

call plug#end()

" =================
" tender theme setup
" =================
if (has("termguicolors"))
  set termguicolors
endif
syntax enable
colorscheme tender 
let g:lighline = { 'colorscheme': 'tender' }
set laststatus=2

" =================
" key mappings
" =================
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
map ÃŸ $
map <C-n> :NERDTreeToggle<CR>
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>

